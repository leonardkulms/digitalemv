%html
  %head
    %title Digitale MV
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  - unless current_user
    = link_to 'Log In', '/auth/slack', method: :get
  - else
    = link_to 'Log Out', sessions_destroy_path, method: :get

  - if flash[:notice]
    #notice= flash[:notice]

  %body
    = yield
